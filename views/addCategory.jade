extends layout

block content
    h2.page-header Add Category

    body

        h1 Add a New Category
        br
        ul.erros
            if errors
                each error, i in errors
                    li.alert.alert-danger #{error.msg}

        form(method='post', action='/category/add')
            .form-group
                label Category Name:
                input.form-control(name='name', type='text')

            input.btn.btn-success(name='submit', type='submit', value='Create Category')
            

